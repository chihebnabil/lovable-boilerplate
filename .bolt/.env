# Lovable Boilerplate - Bolt.new Environment

# Node.js version
NODE_VERSION=18

# Package manager preference
PACKAGE_MANAGER=npm

# Development server configuration
VITE_PORT=8080
VITE_HOST=0.0.0.0

# Build configuration
BUILD_COMMAND=npm run build
DEV_COMMAND=npm run dev
PREVIEW_COMMAND=npm run preview

# AI Coding Assistant Instructions
AI_INSTRUCTIONS_PATH=.github/instructions/global.instructions.md
ENABLE_AI_HINTS=true

# Project type identifiers for Bolt.new
PROJECT_TYPE=react-vite-typescript
FRAMEWORK=react
UI_LIBRARY=shadcn
STYLING=tailwind

# Feature flags
ENABLE_SHADCN=true
ENABLE_TAILWIND=true
ENABLE_TYPESCRIPT=true
ENABLE_REACT_ROUTER=true
ENABLE_REACT_QUERY=true
ENABLE_REACT_HOOK_FORM=true
ENABLE_ZOD_VALIDATION=true

# Development preferences
AUTO_INSTALL_DEPS=true
AUTO_START_DEV_SERVER=true
SHOW_WELCOME_MESSAGE=true
